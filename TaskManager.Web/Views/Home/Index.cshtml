@{
    ViewData["Title"] = "Home Page";
}
 
 
@if(User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Admin"))
{
    <p>@User.Identity.Name</p>
    <a class="btn btn-primary" asp-controller="Users" asp-action="Index">Управление пользователями</a>
    <a class="btn btn-primary" asp-controller="Roles" asp-action="Index">Управление ролями</a>
}
}
else
{
    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Вход</a>
    <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Регистрация</a>
}
